import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;

public class MeinZahlenfeld extends JNumberField
{
  
  // Anfang Attribute
  // Ende Attribute
  // Anfang Methoden
  public float verdopple() {
    // TODO hier Quelltext einfügen
    float zahl = this.getFloat();
    zahl = zahl * 2;   
    return 0;
  }

  public float halbiere() 
  {
    // TODO hier Quelltext einfügen
    float zahl = this.getFloat();
    
    if(zahl>1)
    {
      zahl = zahl / 2;
    }
     
    if(zahl<-1)
    {
      zahl = zahl / 2;
    }
    return 0;
  }
    

  // Ende Methoden
} // end of MeinZahlenfeld

